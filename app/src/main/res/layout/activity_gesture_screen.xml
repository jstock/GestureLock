<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GestureScreen">

    <Button
        android:id="@+id/goto_GestureList_button"
        android:text="@string/button_goto_GestureListActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/goto_SaveGesture_button"
        android:text="@string/button_goto_SaveGestureActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/goto_GestureList_button"/>

    <Button
        android:id="@+id/btnInputGesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a Gesture"
        android:layout_below="@id/goto_GestureList_button" />




</RelativeLayout>
